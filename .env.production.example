# ==============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env.production and fill in actual values
# NEVER commit .env.production to version control!
# ==============================================================================

# ------------------------------------------------------------------------------
# Node Environment
# ------------------------------------------------------------------------------
NODE_ENV=production

# ------------------------------------------------------------------------------
# Database (REQUIRED)
# ------------------------------------------------------------------------------
# PostgreSQL connection string
# Get from: Neon, Railway, Supabase, or your own PostgreSQL instance
DATABASE_URL=postgresql://user:password@host.region.provider.com:5432/database?sslmode=require
POSTGRES_URL=postgresql://user:password@host.region.provider.com:5432/database?sslmode=require

# ------------------------------------------------------------------------------
# Authentication (REQUIRED)
# ------------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-32-character-random-secret-here

# Your production domain
BETTER_AUTH_URL=https://your-domain.com
NEXT_PUBLIC_BETTER_AUTH_URL=https://your-domain.com

# ------------------------------------------------------------------------------
# File Storage (REQUIRED for audio uploads)
# ------------------------------------------------------------------------------
# Vercel Blob Storage token
# Get from: Vercel Dashboard > Storage > Blob
VERCEL_BLOB_READ_WRITE_TOKEN=vercel_blob_rw_...

# ------------------------------------------------------------------------------
# AI Services (REQUIRED)
# ------------------------------------------------------------------------------
# OpenAI API Key (Required for AI scoring and transcription)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Google Gemini API Key (Optional, for fallback AI scoring)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=

# Vercel AI SDK API Key (Optional, uses OPENAI_API_KEY if not set)
VERCEL_AI_API_KEY=

# ------------------------------------------------------------------------------
# AI Configuration
# ------------------------------------------------------------------------------
# Transcription provider: 'openai' or 'none'
AI_TRANSCRIBE_PROVIDER=openai

# Scoring provider priority (comma-separated)
# Options: openai, gemini, vercel, heuristic
PTE_SCORING_PROVIDER_PRIORITY=openai,gemini,vercel,heuristic

# AI timeout in milliseconds
PTE_SCORING_TIMEOUT_MS=10000

# Optional: Override default AI models
VERCEL_AI_OPENAI_MODEL=openai:gpt-4o-mini
VERCEL_AI_GEMINI_MODEL=google:gemini-1.5-flash

# ------------------------------------------------------------------------------
# OAuth Providers (OPTIONAL)
# ------------------------------------------------------------------------------
# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------
# Public base URL
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# Port (usually 3000 for Next.js)
PORT=3000

# ------------------------------------------------------------------------------
# Feature Flags (OPTIONAL)
# ------------------------------------------------------------------------------
# Enable/disable seed routes in production (should be false)
ENABLE_SEED_ROUTES=false

# Enable debug logging (should be false in production)
DEBUG=false

# ------------------------------------------------------------------------------
# Analytics & Monitoring (OPTIONAL)
# ------------------------------------------------------------------------------
# Vercel Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry (Error Tracking)
# SENTRY_DSN=
# SENTRY_AUTH_TOKEN=

# Google Analytics
# NEXT_PUBLIC_GA_ID=

# ------------------------------------------------------------------------------
# Email (OPTIONAL - for future email features)
# ------------------------------------------------------------------------------
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=

# Or use a service like Resend
RESEND_API_KEY=

# ------------------------------------------------------------------------------
# Strapi CMS (REQUIRED for blog functionality)
# ------------------------------------------------------------------------------
# Strapi API URL (your Railway/hosted instance)
STRAPI_API_URL=https://your-strapi-instance.railway.app
# Strapi API Token (generate in Strapi admin)
STRAPI_API_TOKEN=your_strapi_api_token_here

# ------------------------------------------------------------------------------
# Polar Payments (OPTIONAL - for donations/sponsorships)
# ------------------------------------------------------------------------------
# Polar access token from https://polar.sh/settings
POLAR_ACCESS_TOKEN=

# ------------------------------------------------------------------------------
# ElevenLabs AI Voice (OPTIONAL - for voice AI support)
# ------------------------------------------------------------------------------
# ElevenLabs Agent ID (create at https://elevenlabs.io/)
NEXT_PUBLIC_ELEVENLABS_AGENT_ID=
# ElevenLabs API Key
ELEVENLABS_API_KEY=

# ------------------------------------------------------------------------------
# Rate Limiting (OPTIONAL)
# ------------------------------------------------------------------------------
# Redis for rate limiting (if using Upstash or similar)
# REDIS_URL=

# ------------------------------------------------------------------------------
# Security (OPTIONAL)
# ------------------------------------------------------------------------------
# CORS allowed origins (comma-separated)
# ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ==============================================================================
# NOTES
# ==============================================================================
# 1. Required variables MUST be set for the app to work
# 2. Optional variables enhance functionality
# 3. Never expose secrets in client-side code
# 4. Use NEXT_PUBLIC_ prefix only for client-side variables
# 5. Rotate secrets regularly
# 6. Use different secrets for staging and production
# ==============================================================================
